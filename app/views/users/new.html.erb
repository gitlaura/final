<head>
  <%= stylesheet_link_tag 'venues', media: 'all', 'data-turbolinks-track' => true %>
</head>

<div id = "header" class = "col-xs-12 center">
  <div id="header-background">
    <h1>Sign Up</h1>
  </div>
</div>

<div class="col-xs-3"></div>
<div class = "col-xs-9">
  <% if @user.errors.any? %>
    <ul class="list-unstyled text-danger">
      <% @user.errors.full_messages.each do |msg| %>
       <li><strong><%= msg %></strong></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_tag users_path do %>

    <p>
      <%= label_tag :fname, 'First Name' %>
      <%= text_field_tag :fname %>
    </p>

    <p>
      <%= label_tag :lname, 'Last Name' %>
      <%= text_field_tag :lname %>
    </p>

    <p>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag(:password) %>
    </p>

    <p>
      <%= label_tag :password_confirmation, "Password Again" %>
      <%= password_field_tag(:password_confirmation)%>
    </p>

    <%= submit_tag "Sign Up", class: "btn btn-success"%>

  <% end %>
</div>
