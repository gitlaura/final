<head>
  <%= stylesheet_link_tag 'venues', media: 'all', 'data-turbolinks-track' => true %>
</head>

<div id = "header" class = "col-xs-12 center">
  <div id="header-background">
    <h1>Edit your account</h1>
  </div>
</div>

<% if @user.errors.any? %>
  <ul class="list-unstyled text-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><strong><%= msg %></strong></li>
    <% end %>
  </ul>
<% end %>

<%= button_to "Delete", "/users/#{@user.id}", :method => "delete", :class => "btn btn-danger", data: {confirm: "Are you sure?"} %>

<%= form_tag "/users/#{@user.id}", :method => "patch" do %>

  <p>
    <%= label_tag :fname, 'First Name' %>
    <%= text_field_tag :fname, @user.fname  %>
  </p>

  <p>
    <%= label_tag :lname, 'Last Name' %>
    <%= text_field_tag :lname, @user.lname  %>
  </p>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email %>
  </p>

  <p>
    <%= label_tag :password, "Current Password" %>
    <%= password_field_tag :password %>
  </p>

  <hr>
  <p><strong> Optional</strong></p>

  <p>
    <%= label_tag :new_password, "New Password" %>
    <%= password_field_tag :new_password %>
  </p>
  <p>
    <%= label_tag :password_confirmation, "New Password Again" %>
    <%= password_field_tag :password_confirmation %>
  </p>

  <%= submit_tag "Update", class: "btn btn-success"%>

<% end %>
