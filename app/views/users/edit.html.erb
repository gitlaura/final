<div class="page-header">
  <h1>Edit</h1>
</div>

<% if @user.errors.any? %>
  <ul class="list-unstyled text-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><strong><%= msg %></strong></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/users/#{@user.id}", :method => "patch" do %>

  <p>
    <%= label_tag :fname, 'First Name' %>
    <%= text_field_tag :fname, @user.fname  %>
  </p>

  <p>
    <%= label_tag :lname, 'Last Name' %>
    <%= text_field_tag :lname, @user.fname  %>
  </p>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email %>
  </p>

<!--   <p>
    <%= label_tag :password %>
    <%= password_field_tag :password, @user.password %>
  </p>

  <p>
    <%= label_tag :password_confirmation, "Password Again" %>
    <%= password_field_tag :password_confirmation, @user.password%>
  </p> -->

  <%= submit_tag "Update", class: "btn btn-success"%>

<% end %>
